@model QuizApplication.WebApp.ViewModels.EditQuestion_VM

@{
    ViewData["Title"] = "EditQuestion";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h1>Edit question</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.QuizId)

            @Html.HiddenFor(m => m.QuestionId)

            <div class="form-group">
                <label asp-for="QuestionText" class="control-label">Question:</label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.QuestionAnswerId)
            <div class="form-group">
                <label asp-for="QuestionAnswer" class="control-label">Answer:</label>
                <input asp-for="QuestionAnswer" class="form-control" />
                <span asp-validation-for="QuestionAnswer" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.ChoiceAId)

            <div class="form-group">
                <label asp-for="QuestionChoiceA" class="control-label">Choice a:</label>
                <input asp-for="QuestionChoiceA" class="form-control" />
                <span asp-validation-for="QuestionChoiceA" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.ChoiceBId)

            <div class="form-group">
                <label asp-for="QuestionChoiceB" class="control-label">Choice b:</label>
                <input asp-for="QuestionChoiceB" class="form-control" />
                <span asp-validation-for="QuestionChoiceB" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.ChoiceCId)

            <div class="form-group">
                <label asp-for="QuestionChoiceC" class="control-label">Choice c:</label>
                <input asp-for="QuestionChoiceC" class="form-control" />
                <span asp-validation-for="QuestionChoiceC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="quizzes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

