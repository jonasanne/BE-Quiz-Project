@model IEnumerable<QuizApplication.Models.Question>

@{
    ViewData["Title"] = "Questions";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h1>Questions</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                <a asp-action="EditQuestion" asp-route-id="@item.QuestionId">Edit</a> |
                <a asp-action="DetailQuestion" asp-route-id="@item.QuestionId">Details</a> |
                <a asp-action="DeleteQuestion" asp-route-id="@item.QuestionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
